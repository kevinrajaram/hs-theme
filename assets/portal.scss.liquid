.wayfx-header {
  top: 0;
}

html body#recharge-novum #recharge-te {
  background: #f9ebdc;
  
  .list_item_chosen {
    color: #a38c7a;
    * {
      font-size: 30px;
      font-weight: 400;
      font-family: "Burford Base" !important;
      letter-spacing: -2px;
      line-height: 1;
    }
    
    svg {
      font-size: 24px !important;
      margin-left: 5px;
    }
  }
  
  .nav--wrapper.bg-light {
    background: #2d231a;
    color: #a38c7a;
    padding-top: 30px;
    padding-bottom: 30px;
    margin-bottom: 30px;
    
    @media all and (max-width: 767px) {
     padding-top: 15px;
      padding-bottom: 15px;
      margin-bottom: 0;
    }
    
    ul {
      padding-left: 0;
      padding-right: 0;
    }

    a {
      border-bottom: 2px solid transparent;
      color: #a38c7a;
      font-weight: 400;
      padding-bottom: 5px;
      font-size: 26px;
      line-height: 1;
      font-family: "Burford Base";
      letter-spacing: -2px;
      padding-left: 10px;
      padding-right: 10px;
      position: relative;
      transition: color .2s;
      
      &:hover {
        color: #f9ebdc;
      }
    }
  }
  
  #product_5188833280131 {
    display: none;
  }
  
  #rc_te-template-wrapper {
    .rc_schedule_container {
      background: #eadac8; 
    }
   .rc_element_wrapper, 
   .rc_subscription_card_element_wrapper,
   #js-rc_schedule_container .scheduled-order {
      background: #eadac8;
      border: 1px solid #d6c3ac;
      box-shadow: 0 5px 8px 0 rgba(0,0,0,.06);
      border-radius: 8px;
      margin-bottom: 20px;
    }

    #js-rc_schedule_container .scheduled-order {
      margin-bottom: 40px;
    }
    .rc_subscription_info_container {
      border-color: #d6c3ac;
    }

    .rc_subscription_card_element_wrapper {
      margin-bottom: 40px;
    }
    
    .page-title {
      margin-bottom: 20px;
    }
    
  }
  
  .rc_order_title {
    font-family: "Burford Base" !important;
    font-size: 32px !important;
    color: #2d231a !important;
    letter-spacing: -2px !important;
    line-height: 24px !important;
  }
  
  #rc_te-template-wrapper .text-font-14 {
    font-family: "Burford Base" !important;
    font-size: 24px !important;
    color: #2d231a !important;
    letter-spacing: -2px !important;
    line-height: 18px !important;
  }
  
  
  #rc_te-template-wrapper h3, 
  h3 {
    font-size: 36px !important;
    line-height: 26px !important;
    letter-spacing: -4px;
    margin: 0 0 32px;
    font-family: "Burford Base";
    font-weight: 400;
    color: #2d231a;
  }
  
  #rc_te-template-wrapper h5, h5 {
    font-size: 18px !important;
    font-weight: 600 !important;
    line-height: 1 !important;
  }
  
  #rc_te-template-wrapper h2,
  h2 {
    font-size: 48px;
    line-height: 38px;
    letter-spacing: -4px;
    margin: 0 0 8px;
    font-family: "Burford Base";
    font-weight: 400;
    color: #2d231a;
    
    @media all and (max-width: 767px) {
      font-size: 36px;
      line-height: 25px;
    }
  }
  
  #rc_te-template-wrapper p, 
  p {
    font-size: 14px;
    line-height: 16px;
  }

  #rc_te-template-wrapper .margin-top-17 {
    margin-bottom: 0;
  }
  
  .color-light-green {
    color: #2d231a !important;
  }
  
  .color-dark-green {
    color: #2d231a;
   	margin-top: 0 !important; 
  }
  
  #rc_te-template-wrapper .rc_btn, .rc_btn {
    background: #a65713;
  }
  
  select, 
  #rc_te-template-wrapper select,
  #rc_te-template-wrapper select, input.border-light, #rc_te-template-wrapper input.border-light {
    border: 1px solid #b09e88 !important;
	background: rgb(222, 207, 190);
  }
  
  #js-rc_schedule_container h3 {
    margin-bottom: 15px !important;
  }
  
  #te-modal-heading .close-sidebar, 
  #te-card-modal-heading .close-card-sidebar {
    color: #2d231a;
  }
  
}

