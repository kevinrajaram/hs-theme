<div class="wayfx-wrapper">
    <div class="wayfx-social-proof__slider">
        {%- if testimonial_text_1 -%}
        <div class="wayfx-social-proof__slide">
            <blockquote>
                <p>{{ testimonial_text_1 }}</p>
                <cite><strong>{{ testimonial_name_1 }}</strong> <span>{% include 'svg-verified-badge' %} Verified Buyer</span></cite>
            </blockquote>
            <img class="lazyload" data-src="{{ testimonial_image_1 }}" alt=""/>
        </div>
        {%- endif -%}
        {%- if testimonial_text_2 -%}
            <div class="wayfx-social-proof__slide">
                <blockquote>
                    <p>{{ testimonial_text_2 }}</p>
                    {%- if testimonial_name_2 -%}
                    <cite><strong>{{ testimonial_name_2 }}</strong> <span>{% include 'svg-verified-badge' %} Verified Buyer</span></cite>
                    {%- endif -%}
                </blockquote>
                <img class="lazyload" data-src="{{ testimonial_image_2 }}" alt=""/>
            </div>
        {%- endif -%}
        {%- if testimonial_text_3 -%}
            <div class="wayfx-social-proof__slide">
                <blockquote>
                    <p>{{ testimonial_text_3 }}</p>
                    <cite><strong>{{ testimonial_name_3 }}</strong> <span>{% include 'svg-verified-badge' %} Verified Buyer</span></cite>
