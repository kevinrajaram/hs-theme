{%- liquid
    assign testimonial_text_1 = product.metafields.sf_testimonials.testimonial_1_message
    assign testimonial_image_1 = product.metafields.sf_testimonials.testimonial_1_image
    assign testimonial_name_1 = product.metafields.sf_testimonials.testimonial_1_name
    assign testimonial_text_2 = product.metafields.sf_testimonials.testimonial_2_message
    assign testimonial_image_2 = product.metafields.sf_testimonials.testimonial_2_image
