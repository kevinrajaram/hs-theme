                <blockquote>
                    <p>{{ testimonial_text_4 }}</p>
                    <cite><strong>{{ testimonial_name_4 }}</strong> {% include 'svg-verified-badge' %} Verified Buyer</cite>
                </blockquote>
                <img class="lazyload" data-src="{{ testimonial_image_4 }}" alt=""/>
